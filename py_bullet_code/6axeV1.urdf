<robot name="robot_arm">
    <link name="base_link">
        <visual>
            <origin xyz="0 0 0.0225" rpy="0 0 0"/>
            <geometry>
                <box size="0.1 0.1 0.081"/>
            </geometry>
        </visual>
        <inertial>
            <mass value="1.0"/>
            <origin xyz="0 0 0"/>
            <inertia ixx="0.1" iyy="0.1" izz="0.1"/>
        </inertial>
    </link>

    <link name="base_rot">
        <visual>
            <geometry>
                <cylinder length="0.0135" radius="0.035" />
            </geometry>
        </visual>
        <inertial>
            <mass value="1.0"/>
            <origin xyz="0 0 0"/>
            <inertia ixx="0.1" iyy="0.1" izz="0.1"/>
        </inertial>
    </link>

    <joint name="base_joint" type="revolute">
        <parent link="base_link"/>
        <child link="base_rot"/>
        <origin xyz="0 0 0.069" rpy="0 0 0" />
        <axis xyz="0 0 -1"/>
        <limit lower="-3.14" upper="3.14" />
    </joint>

    <link name="arm1">
        <visual>
            <origin xyz="0 0.0305 0.069" rpy="0 0 0" />
            <geometry>
                <cylinder length="0.178" radius="0.0215"/>
            </geometry>
        </visual>
        <inertial>
            <mass value="1.0"/>
            <origin xyz="0 0 0.119"/>
            <inertia ixx="0.1" iyy="0.1" izz="0.1"/>
        </inertial>
    </link>

    <joint name="shoulder_joint" type="revolute">
        <parent link="base_rot"/>
        <child link="arm1"/>
        <origin xyz="0 0 0.027" rpy="0 0 0" />
        <axis xyz="1 0 0"/>
        <limit lower="-0.09" upper="1.57" />
    </joint>

    <link name="arm2">
        <visual>
            <origin xyz="0 0.029 0.046" rpy="0 0 0" />
            <geometry>
                <cylinder length="0.082" radius="0.0245"/>
            </geometry>
        </visual>
        <inertial>
            <mass value="1.0"/>
            <origin xyz="0 0 0"/>
            <inertia ixx="0.1" iyy="0.1" izz="0.1"/>
        </inertial>
    </link>

    <link name="tilt">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <box size="0.03 0.03 0.11" />
            </geometry>
        </visual>
        <inertial>
            <mass value="1.0"/>
            <origin xyz="0 0 0.0225"/>
            <inertia ixx="0.1" iyy="0.1" izz="0.1"/>
        </inertial>
    </link>

    <link name="top">
        <visual>
            <origin xyz="0 0 0.04" rpy="0 0 0" />
            <geometry>
                <box size="0.019 0.019 0.080" />
            </geometry>
        </visual>
        <inertial>
            <mass value="1.0"/>
            <origin xyz="0 0 0.02"/>
            <inertia ixx="0.1" iyy="0.1" izz="0.1"/>
        </inertial>
    </link>

    <link name="gripper">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <box size="0.019 0.019 0.019" />
            </geometry>
        </visual>
        <inertial>
            <mass value="1.0"/>
            <origin xyz="0 0 0.005"/>
            <inertia ixx="0.1" iyy="0.1" izz="0.1"/>
        </inertial>
    </link>

    <joint name="elbow_joint" type="revolute">
        <parent link="arm1"/>
        <child link="arm2"/>
        <origin xyz="0 0.06 0.155" rpy="0 0 3.14" />
        <axis xyz="1 0 0"/>
        <limit lower="0" upper="3.14" />
    </joint>
    

    <joint name="rot_joint" type="revolute">
        <parent link="arm2"/>
        <child link="tilt"/>
        <origin xyz="0 -0.05 0.09" rpy="1.57 0 0" />
        <axis xyz="0 0 -1"/>
        <limit lower="-3.14" upper="3.14" />
    </joint>

    <joint name="tilt_joint" type="revolute">
        <parent link="tilt"/>
        <child link="top"/>
        <origin xyz="0 0 0.055" rpy="0 0 0" />
        <axis xyz="-1 0 0"/>
        <limit lower="-1.57" upper="0" />
    </joint>

    <joint name="rot2_joint" type="revolute">
        <parent link="top"/>
        <child link="gripper"/>
        <origin xyz="0 0 0.09" rpy="0 0 0" />
        <axis xyz="0 0 1"/>
        <limit lower="-3.14" upper="3.14" />
    </joint>
</robot>
